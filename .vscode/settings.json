    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#edd4b1",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "editorGroup.border": "#ba81e2",
    "panel.border": "#ba81e2",
    "sash.hoverBorder": "#ba81e2",
    "statusBar.background": "#a358d8",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#ba81e2",
    "statusBarItem.remoteBackground": "#a358d8",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "tab.activeBorder": "#ba81e2",
    "titleBar.activeBackground": "#a358d8",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#a358d899",
    "titleBar.inactiveForeground": "#e7e7e799"
