{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "options": {
        "env": {
            // make sure that both the src and debugpy can be found
            "MICROPYPATH": "${workspaceFolder}/src:${workspaceFolder}/micropython-lib/python-ecosys/debugpy:MICROPYPATH:~/.micropython/lib:/usr/lib/micropython",
            // 3 different levels of debug variants
            // "MP_DEBUG_VARIANT": "unix_settrace",
            // "MP_DEBUG_VARIANT": "unix_settrace_local_xx",
            // "MP_DEBUG_VARIANT": "unix_settrace_save_names",
            "MP_DEBUG_VARIANT": "unix_settrace_set_local",
        },
    },
    "windows": {
        "options": {
            "env": {
                // make sure that both the src and debugpy can be found
                "MICROPYPATH": "${workspaceFolder}/src;${workspaceFolder}/micropython-lib/python-ecosys/debugpy;MICROPYPATH;~/.micropython/lib;/usr/lib/micropython",
                "MP_DEBUG_VARIANT": "unix_debug_enabled",
            },
        }
    },
    "tasks": [
        {
            "label": "monitor_unix",
            "detail": "Start monitor attach uninx module",
            "type": "shell",
            "command": "echo Dummy.",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "mp_unix_module",
                "DAP_monitor_localhost"
            ],
            "icon": {
                "id": "eye",
                "color": "terminal.ansiGreen"
            },
            "dependsOrder": "sequence",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "monitor_ESP32",
            "detail": "Start monitor and ESP32",
            "type": "shell",
            "command": "echo Dummy.",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "icon": {
                "id": "eye",
                "color": "terminal.ansiGreen"
            },
            "dependsOn": [
                "mp_esp32_upload_src",
                "DAP_monitor"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "DAP_monitor_localhost",
            "detail": "Start DAP monitor to inspect the DAP messages",
            "type": "shell",
            "command": "python3 micropython-lib/python-ecosys/debugpy/dap_monitor.py",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "icon": {
                "id": "eye",
                "color": "terminal.ansiGreen"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "DAP_monitor_debugee_esp32",
            "detail": "Start DAP monitor to inspect the DAP messages",
            "type": "shell",
            "command": "python3 micropython-lib/python-ecosys/debugpy/dap_monitor.py --target-host 192.168.1.28",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "icon": {
                "id": "eye",
                "color": "terminal.ansiGreen"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "mp_unix_file",
            "detail": "MicroPython Unix - Current File",
            "type": "shell",
            "command": "${workspaceFolder}/firmware/${MP_DEBUG_VARIANT}/micropython",
            "args": [
                "${file}"
            ],
            "isBackground": true,
            "presentation": {
                "focus": true
            },
            "icon": {
                "id": "debug",
                "color": "terminal.ansiCyan"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "mp_unix_module",
            "detail": "MicroPython Unix - Module via start_debugpy.py",
            "type": "shell",
            "command": "${workspaceFolder}/firmware/${MP_DEBUG_VARIANT}/micropython",
            "args": [
                "${workspaceFolder}/launcher/start_debugpy.py",
                "${fileBasenameNoExtension}"
            ],
            "isBackground": true,
            "presentation": {
                "focus": true,
                "panel": "dedicated",
                "reveal": "always"
            },
            "icon": {
                "id": "debug",
                "color": "terminal.ansiCyan"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "mp_esp32_upload_src",
            "detail": "MicroPython ESP32 - launcher/upload_src.sh/.ps1",
            "type": "shell",
            "command": "${workspaceFolder}/launcher/upload_src.sh",
            "windows": {
                "command": "${workspaceFolder}/launcher/upload_src.ps1"
            },
            "isBackground": true,
            "presentation": {
                "focus": true,
                "panel": "dedicated",
                "reveal": "always"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "Debugpy listening on.*"
                    }
                }
            ]
        }
    ],
}