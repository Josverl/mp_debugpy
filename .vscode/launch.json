    "version": "0.2.0",
    "configurations": [
        {
            "name": "MP unix debugpy: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
        },
        {
            "name": "MP unix debugpy: File",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "mp_unix_file",
        },

        {
            "name": "MP unix debugpy: module",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "mp_unix_module",
        },
        {
            "name": "MP ESP32 - module",
            "type": "debugpy",
            "request": "attach",
            // "connect": {
            //     "host": "localhost",
            //     "port": 5679
            // },
            "connect": {
                "host": "debugee_esp32.local",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "mp_esp32_upload_src",
        },
        {
            "name": "MP unix : DAP Monitor",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            // "logToFile": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "DAP_monitor",
        },        
    ]
}