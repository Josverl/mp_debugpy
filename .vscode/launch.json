{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
            {
            "name": "Debug pytest tests",
            "purpose": [
                "debug-test"
            ],
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            // false : Avoid debugpy trying to debug micropython
            // but may cause issue with pytest-cov coverage reporting 
            "subProcess": false,
        },
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MP unix debugpy: Attach",
            "type": "debugpy",
            "request": "attach",
            // "logToFile": true,
            "connect": {
                "host": "${input:debugHost}",
                "port": "${input:debugPort}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "MP unix debugpy: File",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "mp_unix_file",
        },
        {
            "name": "MP unix debugpy: module",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "./src/",
                    "remoteRoot": "./src/"
                }
            ],
            "justMyCode": false,
            // "logToFile": true,
            "preLaunchTask": "mp_unix_module",
        },
        {
            "name": "MP ESP32 - module",
            "type": "debugpy",
            "request": "attach",
            // "connect": {
            //     "host": "localhost",
            //     "port": 5679
            // },
            "connect": {
                "host": "debugee_esp32.local",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/"
                }
            ],
            "logToFile": true,
            "justMyCode": false,
            "preLaunchTask": "mp_esp32_upload_src",
        },
        {
            "name": "DAP Monitor + ...",
            "preLaunchTask": "monitor_unix",
            // "preLaunchTask": "monitor_ESP32",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "logToFile": true,
            "pathMappings": [
                {
                    "localRoot": "./src/",
                    "remoteRoot": "./src/"
                }
            ],
            "justMyCode": false,
        },
    ],
    "inputs": [
        {
            "id": "debugHost",
            "type": "promptString",
            "description": "Debug host",
            "default": "localhost"
        },
        {
            "id": "debugPort",
            "type": "promptString",
            "description": "Debug port",
            "default": "5678"
        }
    ]
}